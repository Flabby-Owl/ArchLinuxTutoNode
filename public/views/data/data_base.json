 {
     "b_bios_cfdisk": "cfdisk",
     "b_bios_ext4_boot": "mkfs.ext4 /dev/sda1",
     "b_bios_ext4_root": "mkfs.ext4 /dev/sda3",
     "b_bios_ext4_home": "mkfs.ext4 /dev/sda4",
     "b_bios_make_swap": "mkswap /dev/sda2",
     "b_bios_swapon": "swapon /dev/sda2",
     "b_bios_mnt_root": "mount /dev/sda3 /mnt",
     "b_bios_mkdir_boot_home": "mkdir /mnt/{boot,home}",
     "b_bios_mnt_boot": "mount /dev/sda1 /mnt/boot",
     "b_bios_mnt_home": "mount /dev/sda3 /mnt/home",
     "b_uefi_cgdisk": "cgdisk /dev/sda",
     "b_uefi_ext4_root": "mkfs.ext4 /dev/sda1",
     "b_uefi_ext4_boot": "mkfs.fat -F32 /dev/sda2",
     "b_uefi_ext4_home": "mkfs.ext4 /dev/sda4",
     "b_uefi_make_swap": "mkswap /dev/sda3",
     "b_uefi_swapon": "swapon /dev/sda3",
     "b_uefi_mnt_root": "mount /dev/sda1 /mnt",
     "b_uefi_mkdir_boot_home": "mkdir /mnt/{boot,home}",
     "b_uefi_mkdir_efi": "mkdir /mnt/boot/efi",
     "b_uefi_mnt_boot": "mount /dev/sda2 /mnt/boot/efi",
     "b_uefi_mnt_home": "mount /dev/sda4 /mnt/home",
     "b_export_proxy": "export http_proxy=http://proxy:port/",
     "b_nano_mirrorlist": "nano /etc/pacman.d/mirrorlist",
     "b_pacstrap_base": "pacstrap /mnt base base-devel pacman-contrib nano linux linux-headers linux-firmware man-db man-pages e2fsprogs sysfsutils",
     "b_pacstrap_tools": "pacstrap /mnt zip unzip p7zip alsa-utils syslog-ng mtools dosfstools lsb-release ntfs-3g exfat-utils bash-completion",
     "b_genfstab": "genfstab -U -p /mnt >> /mnt/etc/fstab",
     "b_pacstrap_grub_bios": "pacstrap /mnt grub",
     "b_pacstrap_grub_uefi": "pacstrap /mnt grub efibootmgr",
     "b_chroot": "arch-chroot /mnt",
     "b_vconsole": "nano /etc/vconsole.conf",
     "b_locale": "nano /etc/locale.conf",
     "b_locale_gen_check": "nano /etc/locale.gen",
     "b_locale_gen": "locale-gen",
     "b_export_fr": "export LANG=fr_FR.UTF-8",
     "b_hostname": "nano /etc/hostname",
     "b_hosts": "nano /etc/hosts",
     "b_localtime": "ln -sf /usr/share/zoneinfo/Europe/Paris /etc/localtime",
     "b_hwclock": "hwclock --systohc --utc",
     "b_mkinitcpio": "mkinitcpio -p linux",
     "b_grub_bios": "grub-install --no-floppy --recheck /dev/sda",
     "b_grub_uefi_efivarfs": "mount | grep efivars &> /dev/null || mount -t efivarfs efivarfs /sys/firmware/efi/efivars",
     "b_grub_uefi": "grub-install --target=x86_64-efi --efi-directory=/boot/efi --bootloader-id=arch_grub --recheck",
     "b_grub": "grub-mkconfig -o /boot/grub/grub.cfg",
     "b_root_passwd": "passwd root",
     "b_user_creation": "useradd -m -g wheel -c 'Nom complet de l’utilisateur' -s /bin/bash nom-de-l’utilisateur",
     "b_user_passwd": "passwd nom-de-l’utilisateur",
     "b_user_sudoers": "nano /etc/sudoers",
     "b_networkmanager_install": "pacman -Syy networkmanager",
     "b_networkmanager_enable": "systemctl enable NetworkManager",
     "b_umount": "umount -R /mnt"
     
 }